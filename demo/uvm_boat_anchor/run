rm -rf work
vlib work > sim.log

vlog -sv -ccflags "-std=c++0x -lncurses" \
     uvm_boat_anchor_demo.sv >> sim.log
     #-dpiheader cimports.h

vsim -c \
     -l run.log \
     uvm_boat_anchor_demo \
     -sv_lib libstdc++ \
     -sv_lib libncurses \
     -sv_lib uvm_boat_anchor \
     -do "run -all" >> sim.log
